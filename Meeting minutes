    <script>
        // éŸ³å£°èªè­˜ã®åˆæœŸåŒ–
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        
        if (!SpeechRecognition) {
            document.getElementById('browser-warning').style.display = 'block';
            document.getElementById('start-btn').disabled = true;
        }

        let recognition = null;
        let isRecording = false;
        let fullTranscript = '';

        // DOMè¦ç´ ã®å–å¾—
        const startBtn = document.getElementById('start-btn');
        const stopBtn = document.getElementById('stop-btn');
        const clearBtn = document.getElementById('clear-btn');
        const downloadBtn = document.getElementById('download-btn');
        const statusDiv = document.getElementById('status');
        const rawTranscript = document.getElementById('raw-transcript');
        const minutes = document.getElementById('minutes');
        const meetingTitle = document.getElementById('meeting-title');
        const meetingDate = document.getElementById('meeting-date');
        const participants = document.getElementById('participants');

        // ä»Šæ—¥ã®æ—¥ä»˜ã‚’è‡ªå‹•è¨­å®š
        const today = new Date().toISOString().split('T')[0];
        meetingDate.value = today;

        // éŸ³å£°èªè­˜ã®è¨­å®š
        function initRecognition() {
            recognition = new SpeechRecognition();
            recognition.lang = 'ja-JP';
            recognition.continuous = true;
            recognition.interimResults = true;

            recognition.onstart = () => {
                isRecording = true;
                updateStatus(true);
            };

            recognition.onresult = (event) => {
                let interimTranscript = '';
                let finalTranscript = '';

                for (let i = event.resultIndex; i < event.results.length; i++) {
                    const transcript = event.results[i][0].transcript;
                    if (event.results[i].isFinal) {
                        finalTranscript += transcript + '\n';
                    } else {
                        interimTranscript += transcript;
                    }
                }

                if (finalTranscript) {
                    fullTranscript += finalTranscript;
                    rawTranscript.value = fullTranscript;
                    
                    // è‡ªå‹•ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
                    rawTranscript.scrollTop = rawTranscript.scrollHeight;
                }
            };

            recognition.onerror = (event) => {
                console.error('éŸ³å£°èªè­˜ã‚¨ãƒ©ãƒ¼:', event.error);
                if (event.error === 'no-speech') {
                    console.log('éŸ³å£°ãŒæ¤œå‡ºã•ã‚Œã¾ã›ã‚“ã§ã—ãŸ');
                }
            };

            recognition.onend = () => {
                if (isRecording) {
                    // è‡ªå‹•çš„ã«å†é–‹
                    recognition.start();
                } else {
                    updateStatus(false);
                }
            };
        }

        // ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹æ›´æ–°
        function updateStatus(recording) {
            if (recording) {
                statusDiv.className = 'status recording';
                statusDiv.innerHTML = '<div class="recording-indicator"></div><span>ğŸ¤ éŒ²éŸ³ä¸­...</span>';
                startBtn.disabled = true;
                stopBtn.disabled = false;
            } else {
                statusDiv.className = 'status stopped';
                statusDiv.innerHTML = '<span>â¹ï¸ åœæ­¢ä¸­</span>';
                startBtn.disabled = false;
                stopBtn.disabled = true;
            }
        }

        // éŒ²éŸ³é–‹å§‹
        startBtn.addEventListener('click', () => {
            if (!recognition) {
                initRecognition();
            }
            recognition.start();
        });

        // éŒ²éŸ³åœæ­¢
        stopBtn.addEventListener('click', () => {
            isRecording = false;
            if (recognition) {
                recognition.stop();
            }
        });

        // ã‚¯ãƒªã‚¢
        clearBtn.addEventListener('click', () => {
            if (confirm('ã™ã¹ã¦ã®ãƒ†ã‚­ã‚¹ãƒˆã‚’ã‚¯ãƒªã‚¢ã—ã¾ã™ã‹ï¼Ÿ')) {
                fullTranscript = '';
                rawTranscript.value = '';
                minutes.value = '';
            }
        });

        // ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
        downloadBtn.addEventListener('click', () => {
            const title = meetingTitle.value || 'ä¼šè­°è­°äº‹éŒ²';
            const date = meetingDate.value || today;
            const participantsList = participants.value;
            const minutesText = minutes.value || rawTranscript.value;

            // è­°äº‹éŒ²ã®ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
            let output = `ã‚¿ã‚¤ãƒˆãƒ«ï¼š${title}\n`;
            output += `æ—¥ä»˜ï¼š${date}\n`;
            if (participantsList) {
                output += `å‚åŠ è€…ï¼š${participantsList}\n`;
            }
            output += `\n${'='.repeat(50)}\n\n`;
            output += minutesText;

            // ãƒ•ã‚¡ã‚¤ãƒ«ã¨ã—ã¦ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
            const blob = new Blob([output], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `è­°äº‹éŒ²_${date}_${title}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        });

        // å·¦å´ã®ãƒ†ã‚­ã‚¹ãƒˆã‚’å³å´ã«ã‚³ãƒ”ãƒ¼ã™ã‚‹ã‚·ãƒ§ãƒ¼ãƒˆã‚«ãƒƒãƒˆï¼ˆCtrl+Shift+Cï¼‰
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.shiftKey && e.key === 'C') {
                e.preventDefault();
                if (minutes.value === '') {
                    minutes.value = rawTranscript.value;
                }
            }
        });
    </script>
